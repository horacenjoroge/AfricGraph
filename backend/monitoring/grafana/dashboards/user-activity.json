{
  "dashboard": {
    "title": "AfricGraph - User Activity",
    "tags": ["africgraph", "user"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "API Requests by Endpoint",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(api_requests_total[5m])) by (endpoint)",
            "legendFormat": "{{endpoint}}"
          }
        ]
      },
      {
        "id": 2,
        "title": "Workflow Approvals",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(workflow_approvals_total[5m])",
            "legendFormat": "{{workflow_type}} {{status}}"
          }
        ]
      },
      {
        "id": 3,
        "title": "Pending Workflows",
        "type": "stat",
        "targets": [
          {
            "expr": "pending_workflows",
            "legendFormat": "Count"
          }
        ]
      },
      {
        "id": 4,
        "title": "Workflow Approval Duration",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(workflow_approval_duration_seconds_bucket[5m]))",
            "legendFormat": "{{workflow_type}}"
          }
        ]
      },
      {
        "id": 5,
        "title": "Search Queries by Index",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(search_queries_total[5m])",
            "legendFormat": "{{index}} {{query_type}}"
          }
        ]
      }
    ],
    "refresh": "30s",
    "time": {
      "from": "now-1h",
      "to": "now"
    }
  }
}
